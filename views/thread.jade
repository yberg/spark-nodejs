extends layout

block content
  .card
    .card-header
      h3 Posts
    .card-body
      .input
        form#search
          input(type="text", name="user", autocomplete="off")
          button
            i.glyphicon.glyphicon-search
            |  Search
    .list
      - var colors = ['none', 'blue', 'green', 'red', 'yellow'];
      each result, i in results
        .list-item.list-item-small(class="list-item-#{colors[i%5]}")
          h5 #{result.body}
          a(href="/u/#{result.author}") #{result.author}